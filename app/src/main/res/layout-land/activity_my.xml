<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.nitikasaran.ass1.MyActivity"
    android:background="@drawable/nb">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Is this prime?"
        android:textSize="40dp"
        android:id="@+id/ques"
        android:textAlignment="center"
        android:textColor="#2522bf"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:id="@+id/yesbutton"
        android:textSize="20dp"
        android:onClick="yesbut"
        android:typeface="serif"
        android:layout_below="@+id/score"
        android:layout_toLeftOf="@+id/number"
        android:layout_toStartOf="@+id/number" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No"
        android:id="@+id/nobutton"
        android:textSize="20dp"
        android:onClick="nobut"
        android:typeface="serif"
        android:layout_alignTop="@+id/yesbutton"
        android:layout_toRightOf="@+id/yesbutton"
        android:layout_toEndOf="@+id/yesbutton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/nextbutton"
        android:textSize="20dp"
        android:onClick="nextbut"
        android:typeface="serif"
        android:layout_alignTop="@+id/nobutton"
        android:layout_toRightOf="@+id/nobutton"
        android:layout_toEndOf="@+id/nobutton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000"
        android:id="@+id/number"
        android:textSize="60dp"
        android:textColor="#ce1616"
        android:layout_below="@+id/ques"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/score"
        android:textSize="35dp"
        android:layout_below="@+id/number"
        android:layout_centerHorizontal="true"
        android:textColor="#1d1a1a" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hint"
        android:id="@+id/hintbut"
        android:textSize="20dp"
        android:typeface="serif"
        android:onClick="hint"
        android:layout_below="@+id/yesbutton"
        android:layout_toLeftOf="@+id/cheatbut"
        android:layout_toStartOf="@+id/cheatbut" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cheat"
        android:id="@+id/cheatbut"
        android:textSize="20dp"
        android:typeface="serif"
        android:layout_below="@+id/nobutton"
        android:layout_alignRight="@+id/nextbutton"
        android:layout_alignEnd="@+id/nextbutton"
        android:onClick="cheat" />

</RelativeLayout>